{
  "compilerOptions": {

    "target": "es5",                          
    "module": "commonjs",                     
    "outDir": "../../dist/server",            
    "rootDir": "src",                         
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,
    "composite": true
  },
  "references": [
    { "path": "../../src"}
  ]
}
